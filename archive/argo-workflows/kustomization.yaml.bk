apiVersion: kustomize.config.k8s.io/v1beta1
kind: Kustomization

namespace: argo

resources:
  - base/ingress.yaml
  - patches/argo-server-sa.yaml
  - base/oidc-onelogin.yaml
  - https://github.com/argoproj/argo-workflows/manifests/cluster-install
  - base/namespace.yaml
  - base/cnpg-cluster.yaml

patches:
  - path: patches/argo-server-deployment.yaml
  - path: patches/workflow-controller-configmap.yaml

generatorOptions:
  disableNameSuffixHash: true
